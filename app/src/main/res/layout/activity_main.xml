<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/link_text_material_light"
    tools:context="com.apprentissage.tallyhop.dbfrontest.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/listeGestionnaires"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gesti"/>
                <Button
                    android:id="@+id/listeJoueurs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Joueu"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/listeLigues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ligs" />
                <Button
                    android:id="@+id/listeEquipes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Equi" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/ListJoueursParEquipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Joueu/Equi"/>
                <Button
                    android:id="@+id/ListJoueursParLigue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Equi/lig" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/displayTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Hello World!"
            android:background="@drawable/detail_border"
            />
    </LinearLayout>
</RelativeLayout>
